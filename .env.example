# Proyecto
PROJECT_NAME=Mobile App API
DEBUG=true

# Backend
SECRET_KEY=dev-secret-key-change-in-production-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Base de datos PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/zpinnaldb
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=zpinnaldb
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# Frontend
VITE_API_URL=/api/v1
NODE_ENV=development

